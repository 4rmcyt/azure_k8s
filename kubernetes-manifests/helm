apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: myapp-production-helm
  namespace: argocd
  finalizers:
  - resources-finalizer.argocd.argoproj.io
spec:
  project: default
  source:
    repoURL: https://dev.azure.com/YourOrg/YourProject/_git/Manifests-Repo # Manifests Repo URL
    targetRevision: HEAD
    path: charts/myapp # ArgoCD now points to the location of the Helm Chart
    helm:
      # ArgoCD will use this values file from the same Git repository
      valueFiles:
      - values-prod.yaml
  destination:
    server: https://kubernetes.default.svc
    namespace: production
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
    - CreateNamespace=true
